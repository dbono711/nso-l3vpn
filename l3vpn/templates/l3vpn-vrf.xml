<config-template xmlns="http://tail-f.com/ns/config/1.0">
	<devices xmlns="http://tail-f.com/ns/ncs">
		<device>
			<name>{$DEVICE-NAME}</name>
			<config>

				<vrf xmlns="http://tail-f.com/ned/cisco-ios-xr">
					<vrf-list>
						<name>{$VRF}</name>
						<address-family>
							<ipv4 when="{/inet = 'IPv4' or /inet = 'IPv4-IPv6'}">
								<unicast>
									<import>
										<route-target>
											<address-list>
												<name>{$AS-NUMBER}:{$VPN-ID}</name>
											</address-list>
										</route-target>
									</import>
									<export>
										<route-target>
											<address-list>
												<name>{$AS-NUMBER}:{$VPN-ID}</name>
											</address-list>
										</route-target>
									</export>
									<maximum>
										<prefix>
											<limit>{$MAX-ROUTES}</limit>
											<mid-thresh>{$MAX-ROUTES-WARNING}</mid-thresh>
										</prefix>
									</maximum>
								</unicast>
							</ipv4>
							<ipv6 when="{/inet = 'IPv6' or /inet = 'IPv4-IPv6'}">
								<unicast>
									<import>
										<route-target>
											<address-list>
												<name>22351:{$VPN-ID}</name>
											</address-list>
										</route-target>
									</import>
									<export>
										<route-target>
											<address-list>
												<name>22351:{$VPN-ID}</name>
											</address-list>
										</route-target>
									</export>
									<maximum>
										<prefix>
											<limit>{$MAX-ROUTES}</limit>
											<mid-thresh>{$MAX-ROUTES-WARNING}</mid-thresh>
										</prefix>
									</maximum>
								</unicast>
							</ipv6>
						</address-family>
					</vrf-list>
				</vrf>

				<router xmlns="http://tail-f.com/ned/cisco-ios-xr">
					<bgp>
						<bgp-no-instance>
							<id>{$AS-NUMBER}</id>
							<vrf>
								<name>{$VRF}</name>
								<rd>{$RD}</rd>
								<address-family>
									<ipv4 when="{$INET = 'IPv4' or $INET = 'IPv4-IPv6'}">
										<unicast>
											<redistribute when="{$REDISTRIBUTION-PROTOCOL = 'static'}">
												<static />
											</redistribute>
											<redistribute when="{$REDISTRIBUTION-PROTOCOL = 'connected'}">
												<connected />
											</redistribute>
										</unicast>
									</ipv4>
									<ipv6 when="{$INET = 'IPv6' or $INET = 'IPv4-IPv6'}">
										<unicast>
											<redistribute when="{$REDISTRIBUTION-PROTOCOL = 'static'}">
												<static />
											</redistribute>
											<redistribute when="{$REDISTRIBUTION-PROTOCOL = 'connected'}">
												<connected />
											</redistribute>
										</unicast>
									</ipv6>
								</address-family>
							</vrf>
						</bgp-no-instance>
					</bgp>
				</router>

			</config>
		</device>
	</devices>
</config-template>
