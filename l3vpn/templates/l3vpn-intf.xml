<config-template xmlns="http://tail-f.com/ns/config/1.0">
	<devices xmlns="http://tail-f.com/ns/ncs">
		<device>
			<name>{$DEVICE-NAME}</name>
			<config>

				<!-- ios-xr interface configuration -->
				<interface xmlns="http://tail-f.com/ned/cisco-ios-xr">

					<!-- gigabit ethernet interface configuration -->
					<GigabitEthernet when="{$INTERFACE-TYPE = 'GigabitEthernet' and $PORT-MODE = 'true'}">
						<id>{$INTERFACE-ID}</id>
						<description>NSO:{$CUSTOMER-NAME}:{$SERVICE-ID}</description>
						<mtu>{$MTU}</mtu>
						<service-policy>
							<input>
								<name>{$SERVICE-ID}</name>
							</input>
						</service-policy>
						<vrf>{$VRF}</vrf>
						<!-- <ipv4 when="{$INET = 'IPv4' or $INET = 'IPv4-IPv6'}"> -->
						<ipv4 when="{/inet = 'IPv4' or /inet = 'IPv4-IPv6'}">
							<address>
								<ip>{$IPV4-LOCAL-ADDRESS}</ip>
								<mask>{$IPV4-LOCAL-MASK}</mask>
							</address>
						</ipv4>
						<!-- <ipv6 when="{$INET = 'IPv6' or $INET = 'IPv4-IPv6'}"> -->
						<ipv6 when="{/inet = 'IPv6' or /inet = 'IPv4-IPv6'}">
							<address>
								<prefix-list>
									<prefix>{$IPV6-LOCAL-PREFIX}</prefix>
								</prefix-list>
							</address>
						</ipv6>
					</GigabitEthernet>
					
					<!-- gigabit ethernet sub-interface configuration -->
					<GigabitEthernet-subinterface when="{$INTERFACE-TYPE = 'GigabitEthernet' and $PORT-MODE = 'false'}">
						<GigabitEthernet>
							<id>{$INTERFACE-ID}.{/provider-edge/device[name=$DEVICE-NAME]/interface[name=$INTERFACE-NAME]/efp-id}</id>
							<description>NSO:{$CUSTOMER-NAME}:{$SERVICE-ID}</description>
							<mtu>{$MTU}</mtu>
							<encapsulation>
								<dot1q>
									<vlan-id>{$VLAN-ID}</vlan-id>
									<second-dot1q>{$INNER-VLAN-ID}</second-dot1q>
								</dot1q>
							</encapsulation>
							<service-policy>
								<input>
									<name>{$SERVICE-ID}</name>
								</input>
							</service-policy>
							<vrf>{$VRF}</vrf>
							<!-- <ipv4 when="{$INET = 'IPv4' or $INET = 'IPv4-IPv6'}"> -->
							<ipv4 when="{/inet = 'IPv4' or /inet = 'IPv4-IPv6'}">
								<address>
									<ip>{$IPV4-LOCAL-ADDRESS}</ip>
									<mask>{$IPV4-LOCAL-MASK}</mask>
								</address>
							</ipv4>
							<!-- <ipv6 when="{$INET = 'IPv6' or $INET = 'IPv4-IPv6'}"> -->
							<ipv6 when="{/inet = 'IPv6' or /inet = 'IPv4-IPv6'}">
								<address>
									<prefix-list>
										<prefix>{$IPV6-LOCAL-PREFIX}</prefix>
									</prefix-list>
								</address>
							</ipv6>
						</GigabitEthernet>
					</GigabitEthernet-subinterface>
					
					<!-- tengigabit ethernet interface configuration -->
					<TenGigE when="{$INTERFACE-TYPE = 'TenGigE' and $PORT-MODE = 'true'}">
						<id>{$INTERFACE-ID}</id>
						<description>NSO:{$CUSTOMER-NAME}:{$SERVICE-ID}</description>
						<mtu>{$MTU}</mtu>
						<service-policy>
							<input>
								<name>{$SERVICE-ID}</name>
							</input>
						</service-policy>
						<vrf>{$VRF}</vrf>
						<!-- <ipv4 when="{$INET = 'IPv4' or $INET = 'IPv4-IPv6'}"> -->
						<ipv4 when="{/inet = 'IPv4' or /inet = 'IPv4-IPv6'}">
							<address>
								<ip>{$IPV4-LOCAL-ADDRESS}</ip>
								<mask>{$IPV4-LOCAL-MASK}</mask>
							</address>
						</ipv4>
						<!-- <ipv6 when="{$INET = 'IPv6' or $INET = 'IPv4-IPv6'}"> -->
						<ipv6 when="{/inet = 'IPv6' or /inet = 'IPv4-IPv6'}">
							<address>
								<prefix-list>
									<prefix>{$IPV6-LOCAL-PREFIX}</prefix>
								</prefix-list>
							</address>
						</ipv6>
					</TenGigE>
					
					<!-- tengigabit ethernet sub-interface configuration -->
					<TenGigE-subinterface when="{$INTERFACE-TYPE = 'TenGigE' and $PORT-MODE = 'false'}">
						<TenGigE>
							<id>{$INTERFACE-ID}.{/provider-edge/device[name=$DEVICE-NAME]/interface[name=$INTERFACE-NAME]/efp-id}</id>
							<description>NSO:{$CUSTOMER-NAME}:{$SERVICE-ID}</description>
							<mtu>{$MTU}</mtu>
							<encapsulation>
								<dot1q>
									<vlan-id>{$VLAN-ID}</vlan-id>
									<second-dot1q>{$INNER-VLAN-ID}</second-dot1q>
								</dot1q>
							</encapsulation>
							<service-policy>
								<input>
									<name>{$SERVICE-ID}</name>
								</input>
							</service-policy>
							<vrf>{$VRF}</vrf>
							<!-- <ipv4 when="{$INET = 'IPv4' or $INET = 'IPv4-IPv6'}"> -->
							<ipv4 when="{/inet = 'IPv4' or /inet = 'IPv4-IPv6'}">
								<address>
									<ip>{$IPV4-LOCAL-ADDRESS}</ip>
									<mask>{$IPV4-LOCAL-MASK}</mask>
								</address>
							</ipv4>
							<!-- <ipv6 when="{$INET = 'IPv6' or $INET = 'IPv4-IPv6'}"> -->
							<ipv6 when="{/inet = 'IPv6' or /inet = 'IPv4-IPv6'}">
								<address>
									<prefix-list>
										<prefix>{$IPV6-LOCAL-PREFIX}</prefix>
									</prefix-list>
								</address>
							</ipv6>
						</TenGigE>
					</TenGigE-subinterface>
				</interface>

				<!-- ios interface configuration -->
				<interface xmlns="urn:ios">

					<!-- ethernet interface configuration -->
					<Ethernet when="{$INTERFACE-TYPE = 'Ethernet' and $PORT-MODE = 'true'}">
						<name>{$INTERFACE-ID}</name>
						<description>NSO:{$CUSTOMER-NAME}:{$SERVICE-ID}</description>
						<ip-vrf>
							<ip>
								<vrf>
									<forwarding>{$VRF}</forwarding>
								</vrf>
							</ip>
						</ip-vrf>
						<ip>
						<address>
							<primary>
								<address>{$IPV4-LOCAL-ADDRESS}</address>
								<mask>{$IPV4-LOCAL-MASK}</mask>
							</primary>
						</address>
						</ip>
						<service-policy>
							<input>{$SERVICE-ID}</input>
						</service-policy>
					</Ethernet>

					<!-- ethernet sub-interface configuration -->
					<Ethernet when="{$INTERFACE-TYPE = 'Ethernet' and $PORT-MODE = 'false'}">
						<name>{$INTERFACE-ID}.{/provider-edge/device[name=$DEVICE-NAME]/interface[name=$INTERFACE-NAME]/efp-id}</name>
						<encapsulation>
							<dot1Q>
								<vlan-id>{$VLAN-ID}</vlan-id>
							</dot1Q>
						</encapsulation>
						<ip-vrf>
							<ip>
								<vrf>
									<forwarding>{$VRF}</forwarding>
								</vrf>
							</ip>
						</ip-vrf>
						<ip>
						<address>
							<primary>
								<address>{$IPV4-LOCAL-ADDRESS}</address>
								<mask>{$IPV4-LOCAL-MASK}</mask>
							</primary>
						</address>
						</ip>
						<service-policy>
							<input>{$SERVICE-ID}</input>
						</service-policy>
					</Ethernet>
				</interface>
			</config>
		</device>
	</devices>
</config-template>
