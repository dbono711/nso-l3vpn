<config-template xmlns="http://tail-f.com/ns/config/1.0">
	<devices xmlns="http://tail-f.com/ns/ncs">
		<device>
			<name>{$DEVICE-NAME}</name>
			<config>

				<policy-map xmlns="http://tail-f.com/ned/cisco-ios-xr">
	        <name>{$SERVICE-ID}</name>
	        <class>
	          <class-default>
	            <map>class-default</map>
	            <police-rate-unit>
	              <police>
	                <rate>
	                  <cir>{$CIR}</cir>
	                  <cir-unit>mbps</cir-unit>
										<conform-action>
											<transmit/>
										</conform-action>
	                  <exceed-action>
	                    <drop/>
	                  </exceed-action>
	                </rate>
	              </police>
	            </police-rate-unit>
	          </class-default>
	        </class>
      	</policy-map>

			</config>
		</device>
	</devices>
</config-template>
